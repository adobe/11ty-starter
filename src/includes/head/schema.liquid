<script type="application/ld+json">
  {
    "@context": "https://schema.org",
    "@graph": [
      {
        "@type": "WebSite",
        "@id": "{{ meta.url }}#website",
        "url": "{{ meta.url }}",
        "name": "{{ meta.siteName }}",
        "description": "{{ meta.siteDescription }}",
        "inLanguage": "{{ meta.locale }}"
      }
    ]
  }
  {%- if schema == "blog" -%}
  ,
  {
    "@context": "https://schema.org",
    "@type": "BlogPosting",
    "mainEntityOfPage": {
      "@type": "WebPage"
    },
    "isPartOf": {
      "@id": "{{ meta.url }}#website"
    },
    "@id": "{{meta.url }}{{ url }}",
    "headline": "{{ title or meta.siteName }}",
    "description": "{{ description or meta.siteDescription }}",
    "image": "",
    "inLanguage": "{{ meta.locale }}",
    "publisher": {
      "@type": "{{ meta.siteType }}",
      "name": "{{ meta.sitePublisher }}",
      "url": "{{ meta.url }}"
    },
    {% if author_name %}
    "author": {
      "@type": "Person",
      "name": "{{ author_name }}"
    },
    {% endif -%}
    "datePublished": "{{ date | toIsoString }}"
  }
  {%- endif %}
</script>
