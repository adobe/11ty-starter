{%- assign fullUrl = meta.url | append: page.url -%}
{%- assign pageTitle = meta.siteName -%}
{%- assign pageDescription = meta.siteDescription -%}
{%- case schema -%}
  {%- when "post" -%}
    {%- assign pageTitle = "Blog" -%}
    {%- assign pageDescription = post.description | markdown | strip_html -%}
{%- endcase -%}
{%- if title -%}
  {%- assign pageTitle = title | append: " | " | append: meta.siteName -%}
{%- endif -%}
{%- if description -%}
  {%- assign pageDescription = description -%}
{%- endif -%}
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
<title>{{ pageTitle }}</title>
<meta name="description" content="{{ pageDescription }}" />
<meta name="theme-color" content="{{ meta.themeColor }}" />
<meta name="generator" content="{{ eleventy.generator }}" />
<meta name="color-scheme" content="light dark" />
<meta name="view-transition" content="same-origin" />
<link rel="canonical" href="{{ fullUrl }}" />
<meta property="og:url" content="{{ page.url | absoluteUrl }}" />
<meta property="og:type" content="website" />
<meta property="og:title" content="{{ pageTitle }}" />
<meta property="og:image" content="{{ '/assets/images/open-graph-image.png' | absoluteUrl }}" />
<meta property="og:image:alt" content="Spectrum blog: 404 page not found illustration" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:description" content="{{ pageDescription }}" />
<meta property="og:site_name" content="{{ meta.siteName }}" />
<meta property="og:locale" content="{{ meta.locale }}" />
<meta property="article:author" content="{{ meta.author.name }}" />
<link href="{{ '/feed.xml' | absoluteUrl }}" rel="alternate" title="{{ meta.siteName }} RSS feed">
<link rel="icon" href="{{ '/assets/images/favicon.ico' | absoluteUrl }}" sizes="any" />
<link rel="icon" href="{{ '/assets/images/favicon.svg' | absoluteUrl }}" type="image/svg+xml" />
<link rel="apple-touch-icon" sizes="180x180" href="{{ '/assets/images/apple-touch-icon.png' | absoluteUrl }}" />
<base href="{{ fullUrl }}" />
