{%- capture arrowLeft -%}
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 10 10" style="transform: scaleX(-1)">
  <path d="M9.7 4.387 6.623 1.262a.875.875 0 1 0-1.247 1.226l1.61 1.637H.925a.875.875 0 0 0 0 1.75h6.062l-1.61 1.637a.875.875 0 1 0 1.247 1.226l3.075-3.125a.874.874 0 0 0 0-1.226z"/>
</svg>
{%- endcapture -%}
{%- capture arrowRight -%}
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 10 10">
  <path d="M9.7 4.387 6.623 1.262a.875.875 0 1 0-1.247 1.226l1.61 1.637H.925a.875.875 0 0 0 0 1.75h6.062l-1.61 1.637a.875.875 0 1 0 1.247 1.226l3.075-3.125a.874.874 0 0 0 0-1.226z"/>
</svg>
{%- endcapture -%}
<nav aria-label="Pagination" class="pagination">
  {% assign prevHref = pagination.href.previous %}
  {% assign nextHref = pagination.href.next %}
  {% if prevHref %}
  <a
    href="{{ prevHref }}"
    aria-label="Previous page"
  >
    {{ arrowLeft }}
  </a>
  {% else %}
  <span class="disabled">
    {{ arrowLeft }}
  </span>
  {% endif %}
  <p>
    <span aria-current="page">{{ pagination.pageNumber | plus: 1 }}</span>
    of {{ pagination.links.size }}
  </p>
{% if nextHref %}
  <a
    href="{{ nextHref }}"
    aria-label="Next page"
    class="{% unless nextHref %}disabled{% endunless %}"
  >
  {{ arrowRight }}
  </a>
{% else %}
  <span class="disabled">
    {{ arrowRight }}
  </span>
{% endif %}
</nav>
