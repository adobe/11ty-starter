<!doctype html>
<html lang="{{ meta.lang }}" class="spectrum spectrum--medium spectrum--light">
  <head>
    {% render "head/meta.liquid"
      title:title,
      description:description,
      meta:meta,
      page:page
    %}
    {% render "head/schema.liquid"
      meta:meta
      schema:schema
      url:page.url
      title:page.title
      description:page.description
      author_name:author_name
    %}
    {% if config.typeKitId %}
      <link rel="stylesheet" href="https://use.typekit.net/{{ config.typeKitId }}.css" />
    {% endif %}
    <link rel="stylesheet" href="/assets/css/index.css" />
  </head>
  <body class="spectrum spectrum--light spectrum-Body spectrum-Body--sizeM">
    <div class="main-wrapper">
      <main>
        {% render "includes/layout/header.liquid"
          navigation:navigation.top,
          page:page
        %}
        <article>
          {{ content }}
        </article>
      </main>
      {% render "includes/layout/footer.liquid"
        navigation:navigation.bottom,
        page:page
      %}
    </div>
  </body>
</html>
